<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="vocabletrainer.heinecke.aron.vocabletrainer.Activities.ImportActivity">

    <EditText
        android:id="@+id/tImportPath"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:ems="10"
        android:hint="File"
        android:inputType="textPersonName"
        app:layout_constraintBaseline_toBaselineOf="@+id/bImportFile"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/bExportSelFile"
        tools:focusable="false" />

    <Button
        android:id="@+id/bImportFile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:onClick="selectFile"
        android:text="Select FIle"
        app:layout_constraintBaseline_toBaselineOf="@+id/tExportFile"
        app:layout_constraintRight_toRightOf="parent" />
</android.support.constraint.ConstraintLayout>
